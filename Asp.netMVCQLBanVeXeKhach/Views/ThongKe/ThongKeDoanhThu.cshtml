@{
    ViewData["Title"] = "Thống Kê Doanh Thu";
    var tongDoanhThu = ViewBag.TongDoanhThu ?? 0;
}

<h2>Thống Kê Doanh Thu</h2>

<!-- Form chọn thời gian -->
<form method="get" asp-action="ThongKeDoanhThu" class="filter-form">
    <label for="startDate">Từ ngày:</label>
    <input type="date" id="startDate" name="startDate" value="@ViewBag.StartDate" />
    <label for="endDate">Đến ngày:</label>
    <input type="date" id="endDate" name="endDate" value="@ViewBag.EndDate" />
    <button type="submit" class="btn btn-primary">Lọc</button>
</form>

<h3>Tổng Doanh Thu: @string.Format("{0:N0}", tongDoanhThu) VND</h3>

<!-- Bảng hiển thị chi tiết -->
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Mã Phiếu</th>
            <th>Email</th>
            <th>Ngày Đặt</th>
            <th>Tổng Tiền</th>
            <th>Trạng Thái</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var phieu in Model)
        {
            <tr>
                <td>@phieu.MaPhieu</td>
                <td>@phieu.Email</td>
                <td>@phieu.NgayDat?.ToString("dd/MM/yyyy")</td>
                <td>@string.Format("{0:N0}", phieu.TongTien) VND</td>
                <td>@phieu.TrangThai</td>
            </tr>
        }
    </tbody>
</table>
