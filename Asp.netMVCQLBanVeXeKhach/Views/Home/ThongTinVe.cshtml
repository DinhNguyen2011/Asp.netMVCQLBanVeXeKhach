@model IEnumerable<Asp.netMVCQLBanVeXeKhach.Models.PhieuDatVe>

@{
    ViewData["Title"] = "Danh sách phiếu đặt vé";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
<h2>Danh sách phiếu đặt vé</h2>

@if (!Model.Any())
{
    <p class="text-danger">Bạn chưa có phiếu đặt vé nào.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã phiếu</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaPhieu</td>
                    <td>@item.NgayDat?.ToString("dd/MM/yyyy")</td>
                    <td>@item.TongTien?.ToString("N0") VNĐ</td>
                    <td>@item.TrangThai</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Details" asp-route-id="@item.MaPhieu">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
