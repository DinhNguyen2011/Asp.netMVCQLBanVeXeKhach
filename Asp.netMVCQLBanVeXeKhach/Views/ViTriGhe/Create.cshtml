@model Asp.netMVCQLBanVeXeKhach.Models.Vitrighe

@{
    ViewData["Title"] = "Thêm Vị Trí Ghế";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thêm Vị Trí Ghế</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Bienso" class="control-label"></label>
        <select asp-for="Bienso" class="form-control">
            <option value="">Chọn Biển Số Xe</option>
            @foreach (var item in ViewData["BiensoList"] as SelectList)
            {
                <option value="@item.Value">@item.Text</option>
            }
        </select>
        <span asp-validation-for="Bienso" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Tenvitri" class="control-label"></label>
        <input asp-for="Tenvitri" class="form-control" />
        <span asp-validation-for="Tenvitri" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Trangthai" class="control-label"></label>
        <select asp-for="Trangthai" class="form-control">
            <option value="true">Đang Hoạt Động</option>
            <option value="false">Không Hoạt Động</option>
        </select>
        <span asp-validation-for="Trangthai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Thêm</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Hủy</a>
</form>
