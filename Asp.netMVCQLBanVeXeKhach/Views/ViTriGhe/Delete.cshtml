@model Asp.netMVCQLBanVeXeKhach.Models.VeXe

@{
    ViewData["Title"] = "Xóa Vé Xe";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>Xóa Vé Xe</h2>
<h4 class="text-center">Bạn có chắc chắn muốn xóa vé xe này?</h4>
<div>
    <h4>Thông tin Vé Xe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Mã Vé</dt>
        <dd class="col-sm-10">@Model.MaVe</dd>

        <dt class="col-sm-2">Tên Vé</dt>
        <dd class="col-sm-10">@Model.TenVe</dd>

        <dt class="col-sm-2">Tên Khách Hàng</dt>
        <dd class="col-sm-10">@Model.TenKh</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Trạng Thái</dt>
        <dd class="col-sm-10">@Model.TrangThai</dd>

        <dt class="col-sm-2">Mã Chuyến Xe</dt>
        <dd class="col-sm-10">@Model.MaChuyenNavigation?.TenChuyenXe</dd>

        <dt class="col-sm-2">Vị Trí Ghế</dt>
        <dd class="col-sm-10">@Model.IdVitriNavigation?.Tenvitri</dd>

        <dt class="col-sm-2">Ghi Chú</dt>
        <dd class="col-sm-10">@Model.GhiChu</dd>
    </dl>

    @if (ViewBag.CanDelete)
    {
        <form asp-action="Delete" asp-route-id="@Model.MaVe" method="post">
            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </div>
        </form>
    }
    else
    {
        <div class="alert alert-warning">
            Không thể xóa vé xe này vì có ràng buộc liên quan.
        </div>
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
    }
</div>
