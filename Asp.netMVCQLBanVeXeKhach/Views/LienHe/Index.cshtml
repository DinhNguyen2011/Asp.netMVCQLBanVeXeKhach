@{
    ViewData["Title"] = "Liên Hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    /* Màu nền cho toàn trang */
    body {
        background-color: #f9f9f9;
    }

    /* Tiêu đề */
    h4 {
        color: #FF6600;
        font-weight: bold;
        margin-bottom: 20px;
    }

    /* Khung bên trái */
    ul.list-unstyled {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        line-height: 1.8;
    }

        ul.list-unstyled li {
            color: #333;
        }

            ul.list-unstyled li a {
                color: #FF6600;
                text-decoration: none;
            }

                ul.list-unstyled li a:hover {
                    text-decoration: underline;
                }

    /* Form bên phải */
    form {
        background-color: #0dcaf0;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    input, textarea {
        border: 1px solid #ddd;
        border-radius: 5px;
        transition: all 0.3s;
    }

        input:focus, textarea:focus {
            border-color: #FF6600;
            box-shadow: 0 0 5px rgba(255, 102, 0, 0.5);
            outline: none;
        }

    /* Nút Gửi */
    .btn-primary {
        background-color: #FF6600;
        border-color: #FF6600;
        color: #fff;
        font-weight: bold;
        transition: all 0.3s;
    }

        .btn-primary:hover {
            background-color: #E65C00;
            border-color: #E65C00;
        }
</style>


<div class="container mt-4">
    <div class="row">
        <!-- Thông tin liên hệ -->
        <div class="col-md-6">
            <h4>LIÊN HỆ VỚI CHÚNG TÔI</h4>
            <ul class="list-unstyled">
                <li><strong>CÔNG TY CỔ PHẦN XE KHÁCH</strong></li>
                <li>Địa chỉ: Đại Học Công Nghệ Sài Gòn</li>
                <li>Website: <a href="https://www.stu.edu.vn/" target="_blank">https://www.stu.edu.vn/</a></li>
                <li>Điện thoại: 0853461030</li>
           
                <li>Email: <a href="DH52110805@student.stu.edu.vn">DinhNguyen</a></li>
                <li>Hotline: 19006067</li>
            </ul>
        </div>

        <!-- Form liên hệ -->
        <div class="col-md-6">
            <h4>Gửi thông tin liên hệ đến chúng tôi</h4>
            <form asp-action="SubmitContact" method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Tên</label>
                    <input type="text" name="name" id="name" class="form-control" placeholder="Tên của bạn" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="Email của bạn" required>
                </div>
                <div class="mb-3">
                    <label for="phone" class="form-label">Số điện thoại</label>
                    <input type="text" name="phone" id="phone" class="form-control" placeholder="Số điện thoại của bạn" required>
                </div>
                <div class="mb-3">
                    <label for="subject" class="form-label">Tiêu đề</label>
                    <input type="text" name="subject" id="subject" class="form-control" placeholder="Nhập tiêu đề" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Nội dung</label>
                    <textarea name="message" id="message" class="form-control" rows="4" placeholder="Nhập nội dung ghi chú" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary w-100" onclick="return confirm('Cảm ơn bạn đã liên hệ chúng tôi');">Gửi</button>
            </form>
        </div>
    </div>
</div>
