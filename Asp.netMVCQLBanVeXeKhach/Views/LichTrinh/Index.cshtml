@model List<Asp.netMVCQLBanVeXeKhach.Models.TuyenXe>
@{
    ViewData["Title"] = "Lịch Trình";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/css/indexLichTrinh.css" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="schedule-container">
    <h1>Lịch Trình Các Tuyến Xe</h1>

    <form method="get" asp-action="Index">
        <div class="input-group mb-3">
            <input type="text" name="searchTerm" class="form-control" placeholder="Nhập điểm đi hoặc điểm đến..." />
            <button class="btn btn-primary" type="submit">Tìm Kiếm</button>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th></th>
                <th>Điểm Đi</th>
                <th>Điểm Đến</th>
                <th>Quãng Đường (km)</th>
                <th>Giá Hiện Hành (VND)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                var tuyenXe = Model[i];
                <tr>
                    <td>@(i + 1)</td>
                    <td>@tuyenXe.DiemDi</td>
                    <td>@tuyenXe.DiemDen</td>
                    <td>@tuyenXe.QuangDuong</td>
                    <td>@tuyenXe.GiaHienHanh?.ToString("N0")</td>
                    <td>
                        <form asp-controller="Home" asp-action="Index" method="get">
                            <input type="hidden" name="diemDi" value="@tuyenXe.DiemDi" />
                            <input type="hidden" name="diemDen" value="@tuyenXe.DiemDen" />
                            <button type="submit" class="btn btn-primary">Chọn Tuyến Xe</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script src="~/js/indexLichTrinh.js"></script>
}


